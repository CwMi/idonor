<%- include('../include/_header') %>
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div class="row">

                <!-- CARD 1 -->
                <div class="col-xl-7 col-lg-7" style="margin: auto; display: block;">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header text-center ">
                            <h2>My Profile</h2>
                        </div>

                        <div class="card-body">
                            <!-- Card Body -->
                            <form id="update" method="PUT">
                                <div class="card-body">
                                    <div class="row" >
                                        <div class="col-xl-12 col-md-6 mb-4">
                                            Name:
                                            <div class="form-group">
                                                <input type="text" name="name" value="<%= data.name %>"
                                                    class="form-control form-control-user"
                                                    >
                                            </div>
                                            Username:
                                            <div class="form-group">
                                                <input type="text" name="username" value="<%= data.username %>"
                                                    class="form-control form-control-user" 
                                                    >
                                            </div>
                                            Email:
                                            <div class="form-group">
                                                <input type="text" name="email" value="<%= data.email %>"
                                                    class="form-control form-control-user"
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-xl-12 col-md-6 mb-4">
                                            Address:
                                            <div class="form-group">
                                                <input type="text" name="address" value="<%= data.address %>"
                                                    class="form-control form-control-user"
                                                    placeholder="No.9, Lorong Berlian 2, Taman Batu Tiga"
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-md-6 mb-4">
                                            Postcode:
                                            <div class="form-group">
                                                <input type="text" name="postcode" value="<%= data.postcode %>"
                                                    class="form-control form-control-user" 
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-md-6 mb-4">
                                            City:
                                            <div class="form-group">
                                                <input type="text" name="city" value="<%= data.city %>"
                                                    class="form-control form-control-user"
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-md-6 mb-4">
                                            Latitude:
                                            <div class="form-group">
                                                <input type="text" name="latitude" value="<%= data.latitude %>"
                                                    class="form-control form-control-user"
                                                    >
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-md-6 mb-4">
                                            Longitude:
                                            <div class="form-group">
                                                <input type="text" name="longitude" value="<%= data.longitude %>"
                                                    class="form-control form-control-user"
                                                >
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-md-6 mb-4">
                                            <div>
                                                <button type="submit" data-toggle="modal" data-target="#UpdateStaff"
                                                    class="btn btn-circle btn-info"><span>
                                                        <i class="fa fa-pen"> </i>
                                                    </span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>



       
    </div>
</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<%- include('../include/_footer') %>

<script>
    $('form#update').on('submit', function(event) {
        event.preventDefault();
    
        $.ajax({
            url: "/api/cust/user/<%= staff.id %>",
            method: "PUT",
            data: $('form#update').serialize(),
            dataType: "JSON",
            success: function(data) {
                if(data.status == "success") {
                    alert(data.message)
                    location.href='/cust/profile'
                }
                else {
                    alert(data.message)
                }
            }
        })
    })
    </script>
