<%- include('../include/_header') %>
<style>
    #map {
        width: 100%;
        height: 40vh;
        margin: 0;
    }
</style>

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="row">

        <!-- CARD 1 -->
        <div class="col-xl-7 col-lg-7">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header text-center ">
                    <h2>Requester Details</h2>
                </div>

                <div class="card-body">
                    <!-- Card Body -->
                    <form id="update" method="PUT">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-12 col-md-6 mb-4">
                                    Name:
                                    <div class="form-group">
                                        <input type="text" name="name" value="<%= data.user.name %>"
                                            class="form-control form-control-user" readonly>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6 mb-4">
                                    Item Type:
                                    <div class="form-group">
                                        <input type="text" name="name" value="<%= data.item %>"
                                            class="form-control form-control-user" readonly>
                                    </div>
                                </div>
                                <div class="col-xl-9 col-md-6 mb-4">
                                    Description:
                                    <div class="form-group">
                                        <input type="text" name="name" value="<%= data.desc %>"
                                            class="form-control form-control-user" readonly>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- CARD 1 -->
    <div class="col-xl-5 col-lg-7">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header text-center">
                <h2>Contact</h2>
            </div>

            <div class="card-body">
                <!-- Card Body -->
                <form id="update" method="PUT" class="appointment">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-6 col-md-6 mb-4">
                                Phone Number:
                                <div class="form-group">
                                    <input type="text" name="name" value="<%= data.user.phone %>"
                                        class="form-control form-control-user" readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-md-6 mb-4">
                                Email:
                                <div class="form-group">
                                    <input type="text" name="name" value="<%= data.user.email %>"
                                        class="form-control form-control-user" readonly>
                                </div>
                            </div>
                            <div class="col-xl-12 col-md-6 mb-2 text-center">
                                <h4>Meeting Location</h4>
                            </div>
                            <div class="col-xl-12 col-md-6 mb-2">
                                Address:
                                <div class="form-group">
                                    <input type="text" name="name" value="<%= data.address %>"
                                        class="form-control form-control-user" readonly>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6 mb-2">
                                City:
                                <div class="form-group">
                                    <input type="text" name="name" value="<%= data.city %>"
                                        class="form-control form-control-user" readonly>
                                </div>
                            </div>
                            <div class="col-xl-9 col-md-6 mb-2">
                                Details:
                                <div class="form-group">
                                    <input type="text" name="name" value="<%= data.details %>"
                                        class="form-control form-control-user" readonly>
                                </div>
                            </div>
                            <div class="col-xl-12 col-md-6 mb-2">
                                *Marker will only appear if the requester input his/her location coordinates
                                <div class="dummy-text">
                                    <div id="map"></div>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>

</div>

</div>
</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<%- include('../include/_footer') %>

<script>
    var map = L.map('map').setView([3.0733, 101.5185], 11);
    var osm = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    });
    osm.addTo(map);
</script>


    <script>
        var lat = "<%= data.latitude %>";
        var long = "<%= data.longitude %>";
        var name = "<%= data.user.name %>";
        L.marker([lat,long]).addTo(map)
        var marker = L.marker([lat,long])
        marker
            .bindPopup
            (" <a href = '/cust/donate/detail/<%=data.id%> '> <%-data.user.name %><br><%-data.item %><br><%-data.desc %></a>")
            .addTo(map);
    </script>
